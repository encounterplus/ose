{
  "views": [
    {
      "type": "hStack",
      "alignment": "center",
      "spacing": 6,
      "views": [
        {
          "type": "image",
          "value": "{{definition.imagePath}}",
          "imageResizeMode": "aspectFill",
          "cornerRadius": 6,
          "width": 34,
          "height": 34,
        },
        {
          "type": "image",
          "value": "{% if definition.imagePath == nil %}/icons/attack/{{attackType}}.png{% endif %}",
          "imageResizeMode": "aspectFill",
          "cornerRadius": 6,
          "width": 34,
          "height": 34,
          "color": "#999",
          "custom": {
            "renderingMode": "template"
          }
        },
        {
          "type": "vStack",
          "spacing": 1,
          "link": "{{reference}}",
          "views": [
            {
              "value": "**{{name}}**",
              "style": "item-title"
            },
            {
              "type": "text",
              "style": "item-detail",
              "value": "{{text}}"
            }
          ]
        },
        {
          "type": "field",
          "style": "mini",
          "title": "attack",
          "value": "{{self.attack|diceFormula|signed}}",
          "context": "mixed",
          "width": -1,
          "visibleIf": "self.attack",
          "link": "/roll/{{self.attack|formula|signed}}/{{self.name}}/attack",
        },
        {
          "type": "field",
          "style": "mini",
          "title": "damage",
          "value": "{{self.damage|diceFormula}}",
          "context": "mixed",
          "width": -1,
          "visibleIf": "self.damage",
          "link": "/roll/{{sef.damage|formula}}/{{self.name}}/damage",
        },
        {
          "type": "field",
          "style": "mini",
          "title": "custom",
          "value": "{{self.expression|diceFormula}}",
          "context": "mixed",
          "width": -1,
          "visibleIf": "self.expression",
          "link": "/roll/{{self.expression|formula}}/{{self.name}}",
        },
      ]
    },
  ]
}